@Model 
@{
    ViewData["Title"] = "Login";
}
<div id="content" class="container center-block" >
    <div class="row">
        @*@{ await Html.RenderPartialAsync("_LoginText"); }*@
        <div class="col-lg-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
            <div class="center-block no-padding">
                <form action="@Url.Action("Login", "Login")" method="POST" id="login-form" class="smart-form client-form">
                    <header>
                       
                            <img src="~/Content/img/CityPark/CPNlogo.jpg" alt="" sizes="" class="img-responsive" />
                  
                    </header>
                    @Html.AntiForgeryToken()
                    @Html.ValidationBootstrap()
                    <fieldset>
                        <section>

                        </section>
                        <section>
                            <label class="label">Usuario</label>
                            <label class="input">
                                <i class="icon-append fa fa-user"></i>
                                <input name="UserName" placeholder="Nombre de Usuario">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Por favor entre su nombre de usuario</b>
                            </label>
                        </section>
                        <section>
                            <label class="label">Contrase&ntilde;a</label>
                            <label class="input">
                                <i class="icon-append fa fa-lock"></i>
                                <input name="Password" type="password" placeholder="contrase&ntilde;a">
                                <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Por favor entre su contrase&ntilde;a</b>
                            </label>
                            <div class="note">
                                <a href="@Url.Action("Index", "CajeroCoopPolicias")"><i class="fa fa-frown-o"></i>Perdi&oacute; su contrase&ntilde;a?</a>
                            </div>
                        </section>
                    </fieldset>
                    <footer>
                        <button type="submit" class="btn btn-primary">
                            Aceptar
                        </button>
                    </footer>
                </form>
            </div>
           
        </div>
    </div>
</div>


