@model List<CityParkWeb.Entities.Negocio.Vendedor>

@{
    ViewData["Title"] = "Index";
}
<div id="content">
    <p></p>
     @Html.ActionLink("Nuevo vendedor", "Create", "", new { @class = "btn btn-default" })
    <p> </p>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Vendedores</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Nombre)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-user"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Apellido)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-home"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Empresa.RazonSocial)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-map-marker"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Empresa.Direccion)
                                        </th>
                                        <th>
                                            <i class="icon-append fa fa-cog"></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Nombre)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Apellido)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empresa.RazonSocial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Empresa.Direccion)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Resetear contraseña", "ResetPassword", new { id = item.VendedorId }, new { onclick = "return confirm('Desea resetear la contraseña... ?');" }) |
                                                @Html.ActionLink("Editar", "Edit", new { id = item.VendedorId }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.VendedorId }, new { onclick = "return confirm('Desea eliminar el vendedor de forma permanente... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {
    <script src="~/Scripts/DataTables/DataTableInit.js" type="text/javascript">
    </script>
}
