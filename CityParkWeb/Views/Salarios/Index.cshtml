@model List<CityParkWeb.Entities.Negocio.SalarioBasico>

@{
    ViewData["Title"] = "Index";
}
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<script src="~/Scripts/jquery-2.1.1.js"></script>
<script src="~/Scripts/jquery-2.1.1.min.js"></script>


<div id="content">
    <p></p>
    @Html.ActionLink("Nuevo salario básico", "Create", "", new { @class = "btn btn-default" })
    <p> </p>
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                        <h2>Salarios</h2>
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-comment"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Descripcion)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-usd"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Monto)
                                        </th>
                                        <th data-class="expand">
                                            <i class="icon-append fa fa-calendar"></i>
                                            @Html.DisplayNameFor(model => model.FirstOrDefault().Fecha)
                                        </th>
                                        <th>
                                            <i class="icon-append fa fa-cog"></i>
                                            Opciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descripcion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Monto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Fecha)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Edit", new { id = item.SalarioBasicoId }) |
                                                @Html.ActionLink("Eliminar", "Delete", new { id = item.SalarioBasicoId }, new { onclick = "return confirm('Desea eliminar el salario de forma permanente... ?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
@section pagespecific {

    <script src="~/Scripts/DataTables/DataTableInit.js" type="text/javascript">
    </script>
}


